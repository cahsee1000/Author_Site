<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Genre</th>
      <th>Age Range</th>
      <th>Page Count</th>
      <th>Word Count</th>
      <th>Release Date</th>
      <th>Blurb</th>
      <th>Excerpt</th>
      <th>Type</th>
      <th>Format</th>
      <th>Related Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title.humanize.titleize %></td>
        <td><%= book.description.humanize %></td>
        <td><%= book.photo %></td>
        <td><%= book.genre.humanize %></td>
        <td><%= book.agerange.humanize %></td>
        <td><%= book.pagecount %></td>
        <td><%= book.wordcount %></td>
        <td><%= book.releasedate %></td>
        <td><%= book.blurb.humanize %></td>
        <td><%= book.excerpt.humanize %></td>
        <td><%= book.type.humanize %></td>
        <td><%= book.format.humanize %></td>
        <td><%= book.relatedlink %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

