<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Genre</th>
      <th>Agerange</th>
      <th>Pagecount</th>
      <th>Wordcount</th>
      <th>Releasedate</th>
      <th>Blurb</th>
      <th>Excerpt</th>
      <th>Type</th>
      <th>Format</th>
      <th>Relatedlink</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.photo %></td>
        <td><%= book.genre %></td>
        <td><%= book.agerange %></td>
        <td><%= book.pagecount %></td>
        <td><%= book.wordcount %></td>
        <td><%= book.releasedate %></td>
        <td><%= book.blurb %></td>
        <td><%= book.excerpt %></td>
        <td><%= book.type %></td>
        <td><%= book.format %></td>
        <td><%= book.relatedlink %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

