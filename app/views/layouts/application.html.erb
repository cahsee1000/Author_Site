<!DOCTYPE html>
<html>
  <head>
    <title>AuthorSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <h1 style="text-align: center"><a href="/">Cassie L Morrison</a></h1>
    <ul>
      <% if can? :read, Book %>
        <li class="dropdown">
          <a href="/books" class="dropbtn">Books</a>
          <div class="dropdown-content">
            <% @books.each do |book| %>
              <%=link_to book.title.humanize, book_path(book)%>
            <%end %>
          </div>
        </li>
      <%end %>
      <% if can? :read, Event %>
        <li class="dropdown">
          <a href="/events" class="dropbtn">Events</a>
          <div class="dropdown-content">
            <% @events.each do |event| %>
              <%=link_to event.title.humanize, event_path(event)%>
            <%end %>
          </div>
        </li>
      <%end %>
      <% if can? :read, Blog %>
        <li class="dropdown">
          <a href="/blogs" class="dropbtn">Blogs</a>
           <div class="dropdown-content">
             <% @blogs.each do |blog| %>
               <%=link_to blog.title.humanize, blog_path(blog)%>
             <%end %>
           </div>
        </li>
      <%end %>
      <li><a href="#about">About</a></li>
    </ul>
  </head>

  <div id="login">
    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
    <% else %>
      <%= link_to "Log In", login_path %>
    <% end %>
  </div>

  <body>
    <%= yield %>
  </body>
</html>
