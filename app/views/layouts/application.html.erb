<!DOCTYPE html>
<html>
  <head>
    <title>AuthorSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <h1 style="text-align: center"><a href="/">Cassie L Morrison</a></h1>
    <ul>
      <% if can? :read, Book %>
        <li><%= link_to 'Books', '/books' %></li>
      <%end %>
      <% if can? :read, Event %>
      <li><%= link_to 'Events', '/events' %></li>
      <%end %>
      <% if can? :read, Blog %>
      <li><%= link_to 'Blogs', '/blogs' %></li>
      <%end %>
      <li><a href="#about">About</a></li>
    </ul>
  </head>

  <div id="login">
    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
    <% else %>
      <%= link_to "Log In", login_path %>
    <% end %>
  </div>

  <body>
    <%= yield %>
  </body>
</html>
